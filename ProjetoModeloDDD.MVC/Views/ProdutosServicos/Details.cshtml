@model ProjetoModeloDDD.MVC.ViewModels.ProdutoServicoViewModel

@{
    ViewBag.Title = "Detalhes";
}

<h2>Detalhes</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Descrição")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Descricao)
        </dd>

        <dt>
            @Html.DisplayName("Valor Unitário")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ValorUnitario)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CodigoBarras)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CodigoBarras)
        </dd>

        <dt>
            @Html.DisplayName("Grupo de Impostos")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.GrupoImpostos.Descricao)
        </dd>

        <dt>
            @Html.DisplayName("Unidade Comercial")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UnidadeComercial.Unidade)
        </dd>

        <dt>
            @Html.DisplayName("Descrição da UC")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UnidadeComercial.Descricao)
        </dd>
        @if (Model.NCMId != 0)
        {
            <dt>
                @Html.DisplayName("Código NCM")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.NCM.CodigoNCM)
            </dd>
        }
    </dl>
</div>
<hr />
<p>
    @Html.ActionLink("Alterar", "Edit", new { id = Model.ProdutoServicoId }, new { @class = "btn btn-warning" }) &nbsp;&nbsp;
    @Html.ActionLink("Voltar", "Index", null, new { @class = "btn btn-primary" })
</p>
